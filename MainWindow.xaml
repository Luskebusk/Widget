<Window x:Class="MobitSystemInfoWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mobit System Info" 
        Height="390" 
        Width="285"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        ResizeMode="NoResize" 
        ShowInTaskbar="False"
        Topmost="False"
        ShowActivated="False">
    
    <Grid IsHitTestVisible="False">
        <Grid.Clip>
            <RectangleGeometry RadiusX="16" RadiusY="16" Rect="0,0,285,390"/>
        </Grid.Clip>
        <Border Background="#BF3A3A3A" BorderBrush="#26FFFFFF" BorderThickness="1" CornerRadius="16">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="8" Opacity="0.4" BlurRadius="32"/>
            </Border.Effect>
            
            <StackPanel Margin="10">
                <Border Background="Transparent" CornerRadius="8" Padding="3" HorizontalAlignment="Center" Margin="0,0,0,6" Name="LogoBorder">
                    <Grid>
                        <Image Name="LogoImage" 
                               Source="pack://application:,,,/Resources/logo.png" 
                               MaxWidth="280" 
                               MaxHeight="100" 
                               Stretch="Uniform" 
                               HorizontalAlignment="Center"/>
                        <Border Name="LogoFallback" Background="Transparent" CornerRadius="8" Padding="3" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="mobit IT-Tjenester" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
                
                <TextBlock Text="BRUKERSTÃ˜TTE" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                
                <TextBlock Text="forde@mobit.no" FontSize="15" Foreground="#E0E0E0" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <TextBlock Text="+47 90 68 05 05" FontSize="15" Foreground="#E0E0E0" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                
                <Border BorderBrush="#33FFFFFF" BorderThickness="0,1,0,0" Margin="0,0,0,10"/>
                
                <TextBlock Text="SYSTEMINFORMASJON" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                
                <TextBlock Name="ComputerNameText" Text="Datanavn: " FontSize="11" Foreground="#E0E0E0" HorizontalAlignment="Left" Margin="28,0,0,3"/>
                <TextBlock Name="UsernameText" Text="Bruker: " FontSize="11" Foreground="#E0E0E0" HorizontalAlignment="Left" Margin="28,0,0,3"/>
                <TextBlock Name="DomainText" Text="Domene: " FontSize="11" Foreground="#E0E0E0" HorizontalAlignment="Left" Margin="28,0,0,3"/>
                <TextBlock Name="IpText" Text="IP-adresse: " FontSize="11" Foreground="#E0E0E0" HorizontalAlignment="Left" Margin="28,0,0,3"/>
                <TextBlock Name="MacText" Text="MAC-adresse: " FontSize="11" Foreground="#E0E0E0" HorizontalAlignment="Left" Margin="28,0,0,6"/>
                
                <TextBlock Name="SerialText" Text="SN: " FontSize="11" Foreground="#E0E0E0" HorizontalAlignment="Left" Margin="28,0,0,3"/>
                <TextBlock Name="ManufacturerText" Text="Produsent: " FontSize="11" Foreground="#E0E0E0" HorizontalAlignment="Left" Margin="28,0,0,6"/>
                
                <TextBlock Name="OsNameText" Text="Operativsystem: " FontSize="11" Foreground="#E0E0E0" HorizontalAlignment="Left" Margin="28,0,0,3"/>
                <TextBlock Name="OsVersionText" Text="Versjon: " FontSize="11" Foreground="#E0E0E0" HorizontalAlignment="Left" Margin="28,0,0,3"/>
                
                <TextBlock Name="TimestampText" Text="Sist oppdatert: " FontSize="9" Foreground="#B0B0B0" HorizontalAlignment="Left" Margin="28,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>